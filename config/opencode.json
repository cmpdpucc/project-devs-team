{
  "theme": "default",
  "model": "opencode/gpt-5.2-codex",
  "permission": {
    "bash": {
      "git push": "ask",
      "rm -rf *": "deny",
      "*": "ask"
    },
    "edit": "allow",
    "read": "allow"
  },
  "tui": {
    "enabled": true,
    "scroll_acceleration": {
      "enabled": true
    },
    "diff_style": "auto"
  },
  "watcher": {
    "enabled": true,
    "ignore": [
      "node_modules/**",
      ".git/**",
      "dist/**",
      "build/**",
      ".antigravity/**",
      ".agent/**"
    ]
  },
  "rules": [
    ".agent/rules/GEMINI.md"
  ],
  "instructions": [
    "{file:.agent/rules/GEMINI.md}",
    "{file:.agent/ARCHITECTURE.md}"
  ]
}
